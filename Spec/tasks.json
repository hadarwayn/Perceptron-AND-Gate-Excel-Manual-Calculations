          "id": "2.5",
          "name": "Create learning history table headers with groupings",
          "priority": "critical",
          "estimated_hours": 0.2,
          "dependencies": ["2.4"],
          "excel_location": "A18:Q20",
          "colors": ["blue_header"],
          "features": [
            "Group header: INPUTS (purple)",
            "Group header: CURRENT WEIGHTS (yellow)",
            "Group header: CALCULATION (orange)",
            "Group header: DECISION (blue)",
            "Group header: NEW WEIGHTS (yellow)",
            "Group header: RESULT (green/red)"
          ],
          "description": "Two-row header with category groupings and individual column names"
        },
        {
          "id": "2.6",
          "name": "Generate 20 iteration rows with live formulas",
          "priority": "critical",
          "estimated_hours": 0.4,
          "dependencies": ["2.5"],
          "excel_location": "A21:Q40",
          "features": [
            "Column A: Iteration number (1-20)",
            "Column B: Sample number (1-4 cycling)",
            "Columns C-E: x0, x1, x2 via INDEX formula",
            "Column F: Actual output via INDEX formula",
            "Columns G-I: Current weights (from previous row or initial)",
            "Column J: Z (Dot Product) = G*C + H*D + I*E",
            "Column K: Predicted = IF(J>0, 1, 0)",
            "Column L: Error = F - K",
            "Column M: Status text (CORRECT/INCORRECT)",
            "Columns N-P: New weights using learning rule",
            "Column Q: Visual indicator (‚úÖ or ‚ùå)"
          ],
          "description": "The main learning table with all calculations visible"
        },
        {
          "id": "2.7",
          "name": "Apply conditional formatting and colors to iteration rows",
          "priority": "high",
          "estimated_hours": 0.2,
          "dependencies": ["2.6"],
          "features": [
            "Purple background for input columns (C-E)",
            "Yellow background for weight columns (G-I, N-P)",
            "Orange background for calculation column (J)",
            "Green row highlight when Status = CORRECT",
            "Red/pink row highlight when Status = INCORRECT",
            "Bold status text"
          ],
          "description": "Make the table visually scannable with color coding"
